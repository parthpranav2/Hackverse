<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Portfolio">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/btnusernico"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/circle_background_user">

                    <TextView
                        android:id="@+id/lblname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="top"
                        android:text="@string/lblname"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:text="@string/portfolio"
                    android:textStyle="bold"
                    android:textAppearance="@style/headings"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/linedarkhorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <LinearLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/tabregisteredevents">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imgregisteredevents"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/registerede_a"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="8dp"
                            />
                        <TextView
                            android:id="@+id/txtregisteredevents"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Registered Events"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:textColor="@color/lightblue"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/circle_background_counter"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/txtregisteredeventscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="0"
                                android:textSize="8.33sp"
                                android:textColor="@color/lightblue"
                                android:gravity="center"
                                />
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/lvwregisteredevents"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/lineidle" />

                </LinearLayout>

                <LinearLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/tabinvitation">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/imginvitation"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/invitations_na"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="8dp"
                            />
                        <TextView
                            android:id="@+id/txtinvitation"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Invitations"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:textColor="#969DA4"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/circle_background_counter"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/txtinvitationscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="0"
                                android:textSize="8.33sp"
                                android:textColor="#969DA4"
                                android:gravity="center"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/lvwinvitation"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/lineidle" />
                </LinearLayout>

                <LinearLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/tabpendingregistrations">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imgpendingregistrations"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/pendingregistration_na"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="8dp"
                            />
                        <TextView
                            android:id="@+id/txtpendingregistrations"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Pending Registration"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:textColor="#969DA4"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/circle_background_counter"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/txtpendingregitrationscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="0"
                                android:textSize="8.33sp"
                                android:textColor="#969DA4"
                                android:gravity="center"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/lvwpendingregistrations"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/lineidle" />
                </LinearLayout>

                <LinearLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/tabrequest">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgrequest"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/requests_na"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="8dp"
                            />
                        <TextView
                            android:id="@+id/txtrequest"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Requests"
                            android:gravity="center_vertical"
                            android:textSize="13sp"
                            android:textColor="#969DA4"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/circle_background_counter"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/txtrequestcount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="0"
                                android:textSize="8.33sp"
                                android:textColor="#969DA4"
                                android:gravity="center"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/lvwrequest"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/lineidle" />
                </LinearLayout>

            </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/linedarkhorizontal" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpagerportfolio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="80dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="-90dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/btnhome"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home"
                        android:textAppearance="@style/passive"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btnactiveevents"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/active_events"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/active_events"
                        android:textAppearance="@style/passive"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/portfolio_active"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/portfolio"
                        android:textAppearance="@style/active"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnaddhackathon"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_hackathon"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add_hackathon"
                        android:textAppearance="@style/passive"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btnchatroom"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chatroom"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ChatRoom"
                        android:textAppearance="@style/passive"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>