<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/transparent"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bsfragmenteventinfodesign"
    android:gravity="center_horizontal">

    <View
        android:layout_width="45dp"
        android:layout_marginTop="10dp"
        android:layout_height="4dp"
        android:background="@drawable/notch"
        />


    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:title="Hack Verse"
        app:collapsedTitleTextAppearance="@style/CollapsedTitle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/imgEventTheme"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/blockchain"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:id="@+id/txtEventName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hack Verse"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <Button
                        android:id="@+id/butlike"
                        android:layout_width="33dp"
                        android:layout_height="30dp"
                        android:background="@drawable/like_na"
                        />
                    <TextView
                        android:id="@+id/txtlikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/grey"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >
                    <Button
                        android:id="@+id/butbookmark"
                        android:layout_width="23.33dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bookmark_na"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/grey"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.appbar.CollapsingToolbarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/linedarkhorizontal" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehaviour">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/overview"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="20dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overview"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/txtEventName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hack Verse"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/linedarkhorizontal" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Theme"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/txtEventTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blockchain &amp; Decentralized Systems"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Target Audiance"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/txtEventAudience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Researchers &amp; Academics"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Team Size (Max)"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/txtEventTeamSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/linedarkhorizontal" />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Start Date"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:id="@+id/txtEventssd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="16/12/2024"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="End Date"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                />
                            <TextView
                                android:id="@+id/txtEventsed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="19/01/2025"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Start Time"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:id="@+id/txtEventsst"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="9:15"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="End Time"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                />
                            <TextView
                                android:id="@+id/txtEventset"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="21:15"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                />
                        </LinearLayout>

                    </LinearLayout>





                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/linedarkhorizontal" />





                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/txtEventDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Join us for an exhilarating Python Hackathon, where creativity meets coding excellence! Tackle real-world challenges, showcase your programming skills, and collaborate with like-minded enthusiasts to bring innovative solutions to life. Whether you're a beginner or a Python pro, this event is your gateway to problem-solving, learning, and networking in the world of technology!"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/linedarkhorizontal" />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mode"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:id="@+id/txtEventMode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Online"
                                android:textColor="@color/dthemeGreenText"
                                android:textSize="15sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Venue"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:id="@+id/txtEventVenue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Saptak"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



                <View
                    android:id="@+id/lLineposter"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/linedarkhorizontal" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    >
                    <LinearLayout
                        android:id="@+id/llposter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/overview"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="20dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Poster"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imgEventPoster"
                            android:layout_width="match_parent"
                            android:layout_height="481dp"
                            android:src="@drawable/posterimg"
                            />
                    </LinearLayout>
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/linedarkhorizontal" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/comments"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="20dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comments"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add comment"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <EditText
                            android:id="@+id/txtEventComment"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/pinidle"
                            android:textColorHint="#FFFFFF"
                            android:textColor="#FFFFFF"
                            android:padding="10dp"
                            android:gravity="center_vertical|left"
                            android:layout_marginEnd="60dp"
                            />

                        <ImageView
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/buteventaddcomment"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="-40dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/addcomment"
                            />
                    </LinearLayout>


                    <View
                        android:id="@+id/LLineComments"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/linedarkhorizontal" />


                    <TextView
                        android:id="@+id/txtHeadcomments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comments"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclercomments_items"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/recyclercomments_items"
                        android:scrollbars="vertical"
                        android:clipToPadding="false"
                        />

                </LinearLayout>


                <View
                    android:id="@+id/lLineteams"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/linedarkhorizontal" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    >
                    <LinearLayout
                        android:id="@+id/llteams"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/teams"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registered Teams"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_horizontal"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerregisteredteams_items"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/recyclerregisteredteams_items"
                        android:scrollbars="vertical"
                        android:clipToPadding="false"
                        />

                </LinearLayout>





            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/registrationpallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252E3C"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginTop="-70dp"
        >

        <Button
            android:id="@+id/butRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/btnlightgreen"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>