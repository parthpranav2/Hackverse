<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vwcard"
    app:cardUseCompatPadding="false"
    android:background="@android:color/transparent"
    app:cardBackgroundColor="@color/dark"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/rellayoutIco"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background_user"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            >

            <TextView
                android:id="@+id/lblnameico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="top"
                android:text="@string/lblname"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sendercard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chatbubble_last_sender"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="40dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            >
            <TextView
                android:id="@+id/txtsendername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#B6AAF8"
                android:textStyle="bold"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/txtmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="As ready as I can be after cramming tutorials all week. ðŸ˜‚"
                android:textColor="@color/white"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/txtcommittime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:30pm"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>