<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the chat bubble -->
    <solid android:color="#5E7BF0" />

    <!-- Rounded corners -->
    <corners
        android:topLeftRadius="15dp"
        android:topRightRadius="15dp"
        android:bottomLeftRadius="15dp"
        android:bottomRightRadius="0dp" /> <!-- Slightly sharper edge for a classic bubble look -->

    <!-- Optional padding inside the bubble -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

    <!-- Optional border for a cleaner look -->
    <stroke android:width="1dp" android:color="#3956B5" />
</shape>
